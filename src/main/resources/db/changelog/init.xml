<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_app_user_table" author="andrew">
        <createTable tableName="app_user">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="external_id" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="full_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_user_role_table" author="andrew">
        <createTable tableName="user_role">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(30)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_user_user_role_table" author="andrew">
        <createTable tableName="user_user_role">
            <column name="user_id" type="uuid">
                <constraints foreignKeyName="uur_user_fk"
                             referencedTableName="app_user"
                             referencedColumnNames="id"
                             nullable="false" deleteCascade="true"/>
            </column>
            <column name="user_role_id" type="uuid">
                <constraints foreignKeyName="uur_user_role_fk"
                             referencedTableName="user_role"
                             referencedColumnNames="id"
                             nullable="false" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_workday_entry_table" author="andrew">
        <createTable tableName="workday_entry">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="status" type="varchar(30)"/>
            <column name="started_at" type="timestamp"/>
            <column name="finished_at" type="timestamp"/>
            <column name="user_id" type="uuid">
                <constraints
                        foreignKeyName="fk_ai_user_id"
                        referencedTableName="app_user"
                        referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_time_entry_table" author="andrew">
        <createTable tableName="time_entry">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="started_at" type="timestamp"/>
            <column name="finished_at" type="timestamp"/>
            <column name="workday_entry_id" type="uuid">
                <constraints
                        foreignKeyName="fk_ai_workday_entry_id"
                        referencedTableName="workday_entry"
                        referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>